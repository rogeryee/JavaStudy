<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person"
          class="com.yee.study.spring.framework.ioc.bean.Person"
          init-method="init"
    />

    <bean id="myBeanPostProcessor" class="com.yee.study.spring.framework.ioc.bean.MyBeanPostProcessor"/>

    <bean id="myDestructionAwareBeanPostProcessor"
          class="com.yee.study.spring.framework.ioc.bean.MyDestructionAwareBeanPostProcessor"/>

    <bean id="myInstantiationBeanPostProcessor"
          class="com.yee.study.spring.framework.ioc.bean.MyInstantiationBeanPostProcessor"/>

    <bean id="myMergedBeanDefinitionPostProcessor"
          class="com.yee.study.spring.framework.ioc.bean.MyMergedBeanDefinitionPostProcessor"/>

</beans>